<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">
    
    <!-- Event Store Tables for Event Sourcing -->
    <changeSet id="create-event-store" author="core-business-service">
        <createTable tableName="event_store" schemaName="core_business">
            <column name="event_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="aggregate_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="aggregate_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="event_version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="event_data" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="metadata" type="JSONB"/>
            <column name="occurred_on" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Indexes for performance -->
        <createIndex tableName="event_store" indexName="idx_event_store_aggregate" schemaName="core_business">
            <column name="aggregate_id"/>
            <column name="event_version"/>
        </createIndex>
        
        <createIndex tableName="event_store" indexName="idx_event_store_type" schemaName="core_business">
            <column name="aggregate_type"/>
            <column name="event_type"/>
        </createIndex>
        
        <createIndex tableName="event_store" indexName="idx_event_store_occurred_on" schemaName="core_business">
            <column name="occurred_on"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="event_store" schemaName="core_business"/>
        </rollback>
    </changeSet>
    
    <!-- Event Stream Snapshots for Performance -->
    <changeSet id="create-event-snapshots" author="core-business-service">
        <createTable tableName="event_snapshots" schemaName="core_business">
            <column name="aggregate_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="aggregate_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="snapshot_version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="snapshot_data" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="event_snapshots" indexName="idx_event_snapshots_type" schemaName="core_business">
            <column name="aggregate_type"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="event_snapshots" schemaName="core_business"/>
        </rollback>
    </changeSet>
    
    <!-- Projection State Tables for CQRS Read Models -->
    <changeSet id="create-projection-state" author="core-business-service">
        <createTable tableName="projection_state" schemaName="core_business">
            <column name="projection_name" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_processed_event_id" type="VARCHAR(36)"/>
            <column name="last_processed_position" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <rollback>
            <dropTable tableName="projection_state" schemaName="core_business"/>
        </rollback>
    </changeSet>
    
</databaseChangeLog>

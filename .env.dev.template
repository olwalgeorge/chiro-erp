# Chiro ERP Development Environment Configuration
# Copy this file to .env.dev and customize as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=chiro_erp_dev
DB_USERNAME=chiro_dev
DB_PASSWORD=chiro_dev_secure_password_2025
DB_HOST=postgres
DB_PORT=5432

# Connection pool settings
DB_MIN_SIZE=5
DB_MAX_SIZE=20
DB_IDLE_TIMEOUT=300

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CONSUMER_GROUP_ID=chiro-erp-dev
KAFKA_PORT=9092

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
API_GATEWAY_PORT=8090

# Service URLs (internal communication)
CORE_BUSINESS_SERVICE_URL=http://core-business-service:8080
OPERATIONS_SERVICE_URL=http://operations-management-service:8081
CUSTOMER_RELATIONS_SERVICE_URL=http://customer-relations-service:8082
PLATFORM_SERVICES_URL=http://platform-services:8083
WORKFORCE_SERVICE_URL=http://workforce-management-service:8084

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin_dev_password

# Development tools
KAFKA_UI_PORT=8091
PGADMIN_PORT=8092
PGADMIN_EMAIL=admin@chiro-dev.local
PGADMIN_PASSWORD=admin_dev_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Logging levels
QUARKUS_LOG_LEVEL=INFO
ROOT_LOG_LEVEL=INFO

# Development settings
QUARKUS_PROFILE=dev
QUARKUS_DEV_SERVICES_ENABLED=false
QUARKUS_LIVE_RELOAD_ENABLED=true

# CORS settings for development
QUARKUS_HTTP_CORS=true
QUARKUS_HTTP_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8090

# Development security (less strict)
QUARKUS_SECURITY_USERS_EMBEDDED_ENABLED=true
QUARKUS_SECURITY_USERS_EMBEDDED_PLAIN_TEXT=true
QUARKUS_SECURITY_USERS_EMBEDDED_USERS_ADMIN=admin
QUARKUS_SECURITY_USERS_EMBEDDED_PASSWORDS_ADMIN=admin
QUARKUS_SECURITY_USERS_EMBEDDED_ROLES_ADMIN=admin,user

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker build settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Resource limits for development
COMPOSE_HTTP_TIMEOUT=200
COMPOSE_PROJECT_NAME=chiro-erp-dev

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================

# Enable debug ports
ENABLE_DEBUG=true
DEBUG_SUSPEND=false

# Development database settings
ENABLE_DB_LOGGING=true
HIBERNATE_SHOW_SQL=true
HIBERNATE_FORMAT_SQL=true

# Cache settings (less aggressive caching for dev)
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =============================================================================
# EXTERNAL SERVICES (Development/Mock)
# =============================================================================

# Email service (use mock in development)
EMAIL_SERVICE_ENABLED=false
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025  # MailHog or similar

# File storage (local for development)
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=/tmp/chiro-erp-dev

# Notification service
NOTIFICATION_SERVICE_ENABLED=true
NOTIFICATION_WEBHOOK_URL=http://localhost:3001/webhooks

# =============================================================================
# PERFORMANCE SETTINGS (Development)
# =============================================================================

# Relaxed timeouts for debugging
HTTP_TIMEOUT=60000
DB_QUERY_TIMEOUT=30000
KAFKA_CONSUMER_TIMEOUT=10000

# JVM settings for development
JAVA_OPTS_EXTRA=-Xmx1g -Xms512m
